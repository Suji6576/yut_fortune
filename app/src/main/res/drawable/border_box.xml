<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="false">
        <layer-list>

            <item>

                <shape
                    android:shape="rectangle">

                    <solid
                        android:color="@color/background"/>

                </shape>

            </item>

            <item
                android:top="2dp"
                android:left="2dp"
                android:right="2dp"
                android:bottom="2dp">

                <shape
                    android:shape="rectangle">
                    <solid
                        android:color="@color/white"/>

                </shape>

            </item>

            <item
                android:top="4dp"
                android:left="4dp"
                android:right="4dp"
                android:bottom="4dp">

                <shape
                    android:shape="rectangle">
                    <solid
                        android:color="@color/background"/>

                </shape>

            </item>
            <item
                android:top="6dp"
                android:left="6dp"
                android:right="6dp"
                android:bottom="6dp">

                <shape
                    android:shape="rectangle">
                    <solid
                        android:color="@color/white"/>

                </shape>

            </item>

        </layer-list>
    </item>

</selector>